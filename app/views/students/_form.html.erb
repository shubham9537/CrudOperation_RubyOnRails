<%= form_with(model: student, local: true) do |form| %>

  <% if student.errors.any? %>
    <div class="error-box">
      <%= student.errors.full_messages.join(", ") %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, placeholder: "Enter full name" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, required: true, placeholder: "Enter email address" %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, required: true, placeholder: "Enter age" %>
  </div>

  <%= form.submit "Save Student", class: "btn btn-primary w-full" %>

<% end %>
